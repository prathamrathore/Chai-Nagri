<% layout('layouts/boilerplate')%>

<h1>All Tea Stalls</h1>
<div>
  <a href="/chainagri/new">Add Tea Stall</a>
</div>

<% for (let chainagris of chainagri){%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <%if(chainagris.image.length) {%>
                    <img class="img-fluid" alt="" src="<%=chainagris.image[0].url%>">
                    <% }else {%>
                    <img class="img-fluid" alt=""
                        src="https://c1.wallpaperflare.com/preview/346/680/937/tea-tea-stall-india-stall.jpg">
                    <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= chainagris.title %> </h5>
                    <p class="card-text"><%= chainagris.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= chainagris.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/chainagri/<%=chainagris._id%>">View <%=chainagris.title%></a>
                </div>
            </div>
        </div>
    </div>

<% }%>

